with "gtkada";

project Arun is

   for Source_Dirs use ("src");
   for Object_Dir use "obj";
   for Main use ("main.adb");

   package Builder is
      for Executable ("main.adb") use "arun";
   end Builder;

   --  Enable Ada 2005.
   package Compiler is
      for Switches ("ada") use ("-gnat2012");
   end Compiler;

end Arun;

